{
  "name": "http-upload",
  "version": "1.0.0",
  "description": "Simple file upload API with Node.js",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "pkg": {
    "targets": ["node18-win-x64"],
    "outputPath": "dist",
    "assets": [
      "node_modules/**/*",
      ".env"
    ],
    "scripts": [
      "node_modules/**/*.js"
    ]
  },
  "build": {
    "appId": "com.httpupload.app",
    "productName": "HTTP Upload API",
    "directories": {
      "output": "dist"
    },
    "files": [
      "server.js",
      "package.json",
      "node_modules/**/*",
      ".env"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "sign": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "forceCodeSigning": false
  },
  "keywords": ["file-upload", "api", "nodejs"],
  "author": "",
  "license": "MIT"
}
